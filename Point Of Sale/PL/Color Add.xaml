<Window x:Class="Point_Of_Sale.PL.Color_Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Point_Of_Sale.PL"
        mc:Ignorable="d"
        Title="Add Color" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="label_Copy1" Content="New Color" HorizontalAlignment="Left" Margin="16,32,0,0" VerticalAlignment="Top" FontSize="13"/>
        <TextBox x:Name="newColor" CharacterCasing="Upper" HorizontalAlignment="Left" Height="23" Margin="106,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" FontSize="13"/>
        <Button x:Name="ok" Content="Create" HorizontalAlignment="Left" Margin="166,104,0,0" VerticalAlignment="Top" Width="74" FontSize="13" Click="ok_Click"/>
        <Button x:Name="close" Content="Close" HorizontalAlignment="Left" Margin="57,104,0,0" VerticalAlignment="Top" Width="74" IsCancel="True" FontSize="13"/>
        <Label x:Name="label" Content="Note: No duplicate Color is Allowed" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top" FontSize="11"/>

    </Grid>
</Window>
